{
    "manifest_version": 3,
    "name": "Background Color Changer",
    "version": "1.0",
    "description": "Helps you change the background of your webpages",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "js": ["index.js"]
        }
    ]
}